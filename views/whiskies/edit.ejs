<% layout ('layouts/boilerplate') %>

<div class="row mb-3">
    <h1 class="text-center mb-3">Edit Whisky</h1>

    <div class="col-6 offset-3">

        <form action="/whiskies/<%= whisky._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div>
                <label class="form-label"  for="name" >Name: </label>
                <input class="form-control" type="text" id="name" name="whiskies[name]" value="<%= whisky.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <br />
            <div>
                <label class="form-label" for="type">Type: </label>
                <input class="form-control" type="text" id="type" name="whiskies[type]" value="<%= whisky.type %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <br />
            <div>
                <label class="form-label"   for="price">Price: </label>
                <input class="form-control" type="text" id="price" name="whiskies[price]" value="<%= whisky.price %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <br />
            <div>
                <label class="form-label"   for="image">Image Url: </label>
                <input type="file" name="image" id="image" multiple>
            </div>

            <br />
            <div>
                
                <label for="description" class="form-label">Description: </label>
                <textarea class="form-control" type="text" id="description" rows="3" name= "whiskies[description]"  placeholder="<%= whisky.description %>" required></textarea>
            
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <br />

            <button type="submit" class="btn btn-primary w-100">Update Whisky</button>

        </form>
    </div>
</div>



   